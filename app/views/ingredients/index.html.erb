<% provide(:title, "Ingredients") %>

<p id="notice"><%= notice %></p>

<div id="static">
 <div id="ingredientsContainer">
  
  <h1>Ingredients</h1>
  



 <table>
  <thead>
    <tr>
      <th><%= link_to "Name", :sort => "title" %></th>
      <th><%= link_to "Type", :sort => "ing_type" %></th>
    </tr>
  </thead>
  <tbody>
    <% @ingredients.each do |ingredient| %>
    <tr>
      <td><%= ingredient.title %></td>
      <td><%= ingredient.ing_type %></td>
      <td><a href="/cupboard/<%= ingredient.id %>" class="button"> Add To Cupboard</a></td>
      <td> <%= link_to 'Show',  ingredient, :class => "button", :role => "button" %></td>
      <% if session[:login] == 1 %>   
      <td><%= link_to "Edit", edit_ingredient_path(ingredient) %></td>
      <td><%= link_to "Destroy", ingredient_path(ingredient), :confirm => "Are you sure?", :method => :delete %></td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
 </table>

 
</div>

<br>
<% if session[:login] == 1 %>   
<%= link_to 'New Ingredient',  new_ingredient_path, :class => "button", :role => "button" %>
<% end %>
</div>